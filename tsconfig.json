{
  "compilerOptions": {
    "target": "ES2020", // or ESNext
    "module": "ESNext", // Ensure ESNext module system
    "moduleResolution": "node", // Use Node.js module resolution
    "jsx": "preserve", // Use React 17+ JSX Transform
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
